<%
  server_count = p('consul.agent.servers.lan').size
  respond_to?(:if_link) && if_link('consul_common') do |consul_link|
    server_count = consul_link.instances.size
  end

  timeout = p("confab.timeout_in_seconds")
  if timeout < 60
    raise "timeout_in_seconds must be at least 60 seconds."
  end
  timeout = timeout - 5

  if p("consul.client.enabled") == true && server_count > 0
%>
check process consul_agent
  with pidfile /var/vcap/sys/run/bpm/consul_agent/consul_agent.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start consul_agent"
    with timeout <%= timeout %> seconds
  stop program "/var/vcap/jobs/bpm/bin/bpm stop consul_agent"
  group vcap
<% end %>

<% if p("consul.agent.mode") == "server" && !p("consul.agent.servers.wan").empty? %>
check process consul-join
  with pidfile /var/vcap/sys/run/bpm/consul_agent/consul_join.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start consul_agent -p consul_join"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop consul_agent -p consul_join"
  group vcap
  depends on consul_agent
<% end %>
